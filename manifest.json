{
  "manifest_version": 2,
  "default_locale": "en",
  //"default_locale": "zh_TW",

  "name": "Drag and Go",
  //"name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  //"description": "Drag url, image, text for open or search in new tab",

  "version": "0.1.1",
  
  "author": ["Ray Tseng(mutarock)", "BoRu Su(kilfu0701)"], 

  "permissions": [
    "tabs",
    "storage", 
    "management",
    "http://*/*", 
    "https://*/*" 
  ],

  // "browser_action": {
  //   "default_icon": "icon.png",
  //   "default_popup": "popup.html"
  // },

  // "page_action": {
  //   "default_icon": {                    // optional
  //     "19": "images/icon19.png",           // optional
  //     "38": "images/icon38.png"            // optional
  //   },
  //   "default_title": "Google Mail",      // optional; shown in tooltip
  //   "default_popup": "popup.html"        // optional
  // },

  "background": {
      //"page": "html/background.html",
      "scripts": [ "js/lib/jquery-1.10.2.js", "js/lib/jquery.highlight.js", "js/common.js", "js/background.js" ]
   },

  "options_page": "html/options.html", 

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "content_scripts": [{
    "js": [ "js/lib/jquery-1.10.2.js", "js/lib/jquery-ui.min.js", "js/lib/jquery.highlight.js", "js/exec.js" ],
    "matches": ["<all_urls>"],
    "css": ["css/exec.css"],
    "run_at": "document_end"
    //"run_at": "document_start"
  }]
  


}